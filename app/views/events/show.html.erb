<div class="event-show-main-container">

  <div class="event-show-top-half-container">
    <div class="eventpic-container">
      <%if @event.photo.attached? %>
        <%= cl_image_tag(@event.photo.key, class: "eventpic") %>
      <% else %>
        <%= image_tag("standard_if_no_eventpic.jpg", class: "eventpic") %>
      <% end %>
    </div>

    <div class="event-short-description-container">

      <h2><%= @event.name %></h2>
      <div class="event-date-and-time">
      <%# if ending_date != starting_date, display ending_date %>
        <% if @event.ending_date != @event.starting_date %>
          <p><%= @event.starting_date.strftime("%a %d %B") %> - <%= @event.ending_date.strftime("%a %d %B") %></p>
        <%# else display only starting_date %>
        <% else %>
          <p><%= @event.starting_date.strftime("%a %d %B") %></p>
        <% end %>
        <p><%= @event.starting_time.strftime("%H:%M") %>-<%= @event.ending_time.strftime("%H:%M") %></p>
      </div>
      <div>
        <%=cl_image_tag @event.user.photo.key, class:"avatar-large"%>
      </div>

      <div class="eventprice">
        <% if !@event.free %>
          <p><%= @event.price %> â‚¬</p>
        <% else %>
          <p>free</p>
        <% end %>
      </div>

    </div>

  </div>

  <div class="event-long-description-container">
    <h2>About the event:</h2>
    <p><%= @event.description %></p>
  </div>

  <%= link_to "Add to calendar", new_event_participant_path(@event), class: "btn" %>

</div>
