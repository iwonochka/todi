<div class="dashboard-container-chat">

  <div class="dashboard-header">
    <div class= "user-info">
    <h1><%= @user.username %></h1>
    <p><%= @user.email%></p>
    </div>
    <%if @user.photo.attached? %>
      <%= cl_image_tag(@user.photo.key, class: 'avatar-large avatar-chat') %>
    <% else %>
      <%= image_tag("placeholder.png", class: 'profilepic avatar-chat' ) %>
    <% end %>
  </div>
  <h2 class="chat-index-header">My conversations:</h2>
  <div class="dashboard-paragraph">
    <div class="container">
     <%= render 'components/chat-mini-card' %>
    </div>
  </div>
</div>
